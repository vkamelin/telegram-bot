# === Настройки приложения ===
# название приложения
APP_NAME="telegram-bot"
# режим приложения (dev, prod)
APP_ENV="dev"
# url приложения
APP_URL="http://localhost:8080"
# url веб-приложения
WEB_APP_URL="http://localhost:8080"

# === Логирование ===
# канал логирования (по умолчанию app)
LOG_CHANNEL="app"
# уровень логирования (DEBUG, INFO, NOTICE, WARNING, ERROR, CRITICAL, ALERT, EMERGENCY)
LOG_LEVEL="INFO"

# === База данных ===
# тип подключения к БД (tcp или socket)
DB_CONNECTION_TYPE="tcp"
# хост БД
DB_HOST="db"
# порт БД
DB_PORT=3306
# кодировка БД
DB_CHARSET="utf8mb4"
# имя БД
DB_NAME="app"
# пользователь БД
DB_USER="app"
# пароль БД
DB_PASS="secret"

# === Redis ===
# хост Redis
REDIS_HOST="redis"
# порт Redis
REDIS_PORT=6379
# префикс ключей Redis
REDIS_PREFIX="app:"
# номер БД Redis
REDIS_DB=0

# === JWT токены ===
# секретный ключ JWT (если пусто, сгенерируется scripts/init.sh)
JWT_SECRET="secret"

# === CORS ===
# разрешённые origin через запятую
CORS_ORIGINS="*"

# === Rate limit ===
# тип лимита: ip или user
RATE_LIMIT_BUCKET=ip
# запросов в минуту
RATE_LIMIT=60

# === Request size ===
# максимальный размер тела запроса в байтах
REQUEST_SIZE_LIMIT=1048576

# === Telegram ===
# сервер Telegram-бота (remote или local)
BOT_API_SERVER="remote"
# токен Telegram-бота
BOT_TOKEN="0000000000:AA..."
# имя Telegram-бота
BOT_NAME=""
# максимальное количество запросов в секунду
BOT_MAX_RPS=27
# хост Telegram-бота (при BOT_API_SERVER=local)
BOT_LOCAL_API_HOST="localhost"
# порт Telegram-бота (при BOT_API_SERVER=local)
BOT_LOCAL_API_PORT="8080"
# разрешённые типы обновлений (через запятую; пусто = любые)
TG_ALLOW_TYPES=""
# запрещённые типы обновлений (через запятую; по умолчанию нет)
TG_DENY_TYPES=""
# ID чатов, которым разрешено (через запятую; пусто = все)
TG_ALLOW_CHATS=""
# ID чатов, которым запрещено (через запятую; по умолчанию нет)
TG_DENY_CHATS=""
# разрешённые команды (через запятую; пусто = любые)
TG_ALLOW_COMMANDS=""
# запрещённые команды (через запятую; по умолчанию нет)
TG_DENY_COMMANDS=""
# время жизни ключа идемпотентности (в секундах)
IDEMPOTENCY_KEY_TTL=3600

# брать фильтры из Redis вместо ENV (по умолчанию false)TG_FILTERS_FROM_REDIS=false
# префикс ключей Redis для фильтров (при TG_FILTERS_FROM_REDIS=true)
TG_FILTERS_REDIS_PREFIX="tg_filters:"

# === Телеметрия ===
# включить метрики и трассировку
TELEMETRY_ENABLED=false

# === Workers ===
# число процессов GPT
WORKERS_GPT_PROCS=1
# число процессов Telegram
WORKERS_TELEGRAM_PROCS=1

# === AITunnel ===
# ключ API AITunnel
AITUNNEL_API_KEY=""
