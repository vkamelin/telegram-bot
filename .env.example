# === База данных ===
# строка подключения к БД (при отсутствии будет собрана из переменных ниже)
DB_DSN="mysql:host=db;dbname=app;charset=utf8mb4"
DB_HOST="db"
DB_PORT=3306
DB_CHARSET="utf8mb4"
DB_NAME="app"
# пользователь БД
DB_USER="app"
# пароль БД
DB_PASS="secret"

# === JWT токены ===
# секретный ключ JWT (если пусто, сгенерируется scripts/init.sh)
JWT_SECRET="secret"

# === CORS ===
# разрешённые origin через запятую
CORS_ORIGINS="*"

# === Rate limit ===
# тип лимита: ip или user
RATE_LIMIT_BUCKET=ip
# запросов в минуту
RATE_LIMIT=60

# === Request size ===
# максимальный размер тела запроса в байтах
REQUEST_SIZE_LIMIT=1048576

# === Telegram ===
# токен Telegram-бота
BOT_TOKEN="0000000000:AA..."
# имя Telegram-бота
BOT_NAME=""
# разрешённые типы обновлений (через запятую; пусто = любые)
TG_ALLOW_TYPES=""
# запрещённые типы обновлений (через запятую; по умолчанию нет)
TG_DENY_TYPES=""
# ID чатов, которым разрешено (через запятую; пусто = все)
TG_ALLOW_CHATS=""
# ID чатов, которым запрещено (через запятую; по умолчанию нет)
TG_DENY_CHATS=""
# разрешённые команды (через запятую; пусто = любые)
TG_ALLOW_COMMANDS=""
# запрещённые команды (через запятую; по умолчанию нет)
TG_DENY_COMMANDS=""

# брать фильтры из Redis вместо ENV (по умолчанию false)TG_FILTERS_FROM_REDIS=false
# префикс ключей Redis для фильтров (при TG_FILTERS_FROM_REDIS=true)
TG_FILTERS_REDIS_PREFIX="tg_filters:"

# === Телеметрия ===
# включить метрики и трассировку
TELEMETRY_ENABLED=false

# === Workers ===
# число процессов GPT
WORKERS_GPT_PROCS=1
# число процессов Telegram
WORKERS_TELEGRAM_PROCS=1
