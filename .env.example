# === База данных ===
DB_DSN="mysql:host=127.0.0.1;dbname=app;charset=utf8mb4" # строка подключения к БД
DB_USER="user"                                           # пользователь БД
DB_PASS="pass"                                           # пароль БД

# === JWT токены ===
JWT_SECRET="secret"                                      # секретный ключ JWT (если пусто, сгенерируется scripts/init.sh)

# === CORS ===
CORS_ORIGINS="*"                                         # разрешённые origin через запятую

# === Rate limit ===
RATE_LIMIT_BUCKET=ip                                      # тип лимита: ip или user
RATE_LIMIT=60                                             # запросов в минуту

# === Request size ===
REQUEST_SIZE_LIMIT=1048576                                # максимальный размер тела запроса в байтах

# === Telegram ===
BOT_TOKEN="0000000000:AA..."                              # токен Telegram-бота
TG_ALLOW_TYPES=""                                        # разрешённые типы обновлений (через запятую; пусто = любые)
TG_DENY_TYPES=""                                         # запрещённые типы обновлений (через запятую; по умолчанию нет)
TG_ALLOW_CHATS=""                                        # ID чатов, которым разрешено (через запятую; пусто = все)
TG_DENY_CHATS=""                                         # ID чатов, которым запрещено (через запятую; по умолчанию нет)
TG_ALLOW_COMMANDS=""                                     # разрешённые команды (через запятую; пусто = любые)
TG_DENY_COMMANDS=""                                      # запрещённые команды (через запятую; по умолчанию нет)
TG_FILTERS_FROM_REDIS=false                              # брать фильтры из Redis вместо ENV (по умолчанию false)
TG_FILTERS_REDIS_PREFIX="tg_filters:"                    # префикс ключей Redis для фильтров (при TG_FILTERS_FROM_REDIS=true)

# === Телеметрия ===
TELEMETRY_ENABLED=false                                    # включить метрики и трассировку
