{
  "title": "Telegram Bot Metrics",
  "panels": [
    {
      "type": "graph",
      "title": "Requests per second",
      "targets": [
        {"expr": "sum(rate(app_http_requests_total[1m]))"}
      ],
      "datasource": "Prometheus",
      "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8}
    },
    {
      "type": "graph",
      "title": "Request duration p95",
      "targets": [
        {"expr": "histogram_quantile(0.95, sum(rate(app_http_request_duration_seconds_bucket[5m])) by (le))"}
      ],
      "datasource": "Prometheus",
      "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8}
    },
    {
      "type": "graph",
      "title": "HTTP 5xx errors",
      "targets": [
        {"expr": "sum(rate(app_http_requests_errors_total[1m]))"}
      ],
      "datasource": "Prometheus",
      "gridPos": {"x": 0, "y": 8, "w": 12, "h": 8}
    },
    {
      "type": "graph",
      "title": "Rate limit retry-after p95",
      "targets": [
        {"expr": "histogram_quantile(0.95, sum(rate(app_rate_limit_retry_after_seconds_bucket[5m])) by (le))"}
      ],
      "datasource": "Prometheus",
      "gridPos": {"x": 12, "y": 8, "w": 12, "h": 8}
    }
  ],
  "schemaVersion": 16,
  "version": 1
}
